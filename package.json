        "babel-plugin-module-alias": "^1.6.0",
        "classnames": "^2.2.5",
        "express": "^4.16.2",
        "micro": "^9.1.4",
        "micro-route": "^2.5.0",
        "next": "latest",
        "node-sass": "^4.7.2",
        "nprogress": "^0.2.0",
        "react": "latest",
        "react-dom": "latest",
        "react-key-handler": "^1.0.1",
        "react-redux": "^5.0.7"
    },
    "devDependencies": {
        "babel-eslint": "^8.0.1",
        "babel-plugin-transform-flow-strip-types": "^6.22.0",
        "debug": "^3.1.0",
        "enzyme": "^3.1.0",
        "enzyme-adapter-react-16": "^1.0.2",
        "eslint": "^4.9.0",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-plugin-import": "^2.7.0",
